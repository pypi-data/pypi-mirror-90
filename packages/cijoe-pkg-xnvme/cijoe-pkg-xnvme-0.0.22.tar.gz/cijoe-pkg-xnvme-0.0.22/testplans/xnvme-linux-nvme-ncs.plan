descr: Verify xNVMe mandatory NVM Command-set using a NVMe device
descr_long: |
  Verify xNVMe mandatory NVM Command-set using a NVMe device
hooks: ["sysinf"]
evars:
  CMD_PREFIX: " "
  FIO_NRUNS: "1"
  FIO_SECTION: "default"
  FIO_SCRIPT: "xnvme-verify.fio"
  FIO_IOENG_NAME: "xnvme"
  HUGEMEM: "4096"
  NVME_NSTYPE: "lblk"
  DEV_TYPE: "nvme"




testsuites:
  - name: xnvme_ncs_mandatory
    alias: "xNVMe: verify mandatory NVM functionality using be:linux/nvme/thr"
    evars: { XNVME_BE: "linux", XNVME_ASYNC: "thr" }
    hooks: [ "xnvme" ]
  - name: xnvme_ncs_mandatory
    alias: "xNVMe: verify mandatory NVM functionality using be:linux/nvme/libaio"
    evars: { XNVME_BE: "linux", XNVME_ASYNC: "libaio" }
    hooks: [ "xnvme" ]
  - name: xnvme_ncs_mandatory
    alias: "xNVMe: verify mandatory NVM functionality using be:linux/nvme/io_uring"
    evars: { XNVME_BE: "linux", XNVME_ASYNC: "io_uring" }
    hooks: [ "xnvme" ]
  - name: xnvme_ncs_mandatory
    alias: "xNVMe: verify mandatory NVM functionality using be:spdk"
    evars: { XNVME_BE: "spdk" }
    hooks: [ "xnvme" ]

  - name: xnvme_ncs_optional
    alias: "xNVMe: verify optional NVM functionality using be:linux/nvme/thr"
    evars: { XNVME_BE: "linux", XNVME_ASYNC: "thr" }
    hooks: [ "xnvme" ]
  - name: xnvme_ncs_optional
    alias: "xNVMe: verify optional NVM functionality using be:spdk"
    evars: { XNVME_BE: "spdk" }
    hooks: [ "xnvme" ]
