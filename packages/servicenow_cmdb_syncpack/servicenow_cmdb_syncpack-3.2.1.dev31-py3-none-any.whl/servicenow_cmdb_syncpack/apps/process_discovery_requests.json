{
  "friendly_name": "Sync Service Requests from ServiceNow to SL1",
  "description": "Pulls Service Requests from ServiceNow and Processes for SL1.",
  "configuration": "",
  "author": "ScienceLogic Inc.",
  "version": "3.0.0",
  "meta": {
    "hidden": false
  },
  "app_variables": [
    {
      "name": "sl1_hostname",
      "value": "${config.sl1_host}",
      "description": "The SL1 hostname to participate in the sync",
      "sample_value": "10.2.253.115",
      "required": true
    },
    {
      "name": "snow_hostname",
      "value": "${config.snow_host}",
      "description": "The ServiceNow hostname to participate in the sync",
      "sample_value": "10.2.253.233",
      "required": true
    },
    {
      "name": "sl1_user",
      "value": "${config.sl1_user}",
      "description": "The r authenticating to SL1",
      "sample_value": "em7admin",
      "required": true
    },
    {
      "name": "snow_user",
      "value": "${config.snow_user}",
      "description": "The username for authenticating to ServiceNow",
      "sample_value": "snowadmin",
      "required": true
    },
    {
      "name": "sl1_password",
      "value": "${config.sl1_password}",
      "description": "the password for authenticating with SL1",
      "sample_value": "em7password",
      "required": true
    },
    {
      "name": "snow_password",
      "value": "${config.snow_password}",
      "description": "The password for authenticating to ServiceNow",
      "sample_value": "snowpassword",
      "required": true
    },
    {
      "name": "region",
      "value": "${config.region}",
      "description": "Unique identifier for IS+SL1",
      "sample_value": "ScienceLogicRegion",
      "required": true
    }
  ],
  "steps": [
    {
      "name": "Pull and Process Service Requests",
      "file": "PullAndProcessServiceRequests",
      "syncpack": "servicenow_cmdb_syncpack",
      "prefix_url": "https://${appvar.snow_hostname}",
      "method": "GET",
      "result_key": "results",
      "username": "${appvar.snow_user}",
      "password": "${appvar.snow_password}",
      "chunk_size": 1000,
      "chunk_name_for_pos_in_url": "sysparm_offset",
      "chunk_name_for_max_in_url": "sysparm_limit",
      "chunk_name_for_returned": "return_count",
      "chunk_name_for_total": "total_count",
      "read_timeout": "${appvar.read_timeout}",
      "relative_url": "/api/x_sclo_scilogic/v1/sciencelogic/service_request?region=${appvar.region}&state=${appvar.Open_State}",
      "Open_State": "${appvar.Open_State}",
      "output_to": [
        "Post Discovery Sessions to ScienceLogic",
        "Post Virtual Device Creates to ScienceLogic",
        "Process Remove Device Requests"
      ]
    },
    {
      "name": "Post Virtual Device Creates to ScienceLogic",
      "file": "TriggerApplication",
      "syncpack": "base_steps_syncpack",
      "data_from": [
        "Pull and Process Service Requests"
      ],
      "value_as": "entire_dict_obj",
      "trigger_app": "create_virtual_device",
      "wait_for_child_completion": false,
      "foreach": "${virtual_device_creates}",
      "app_vars": [
        {
          "name": "payload",
          "value": "${payload}"
        },
        {
          "name": "sys_id",
          "value": "${sys_id}"
        }
      ]
    },
    {
      "name": "Post Discovery Sessions to ScienceLogic",
      "file": "TriggerApplication",
      "syncpack": "base_steps_syncpack",
      "data_from": [
        "Pull and Process Service Requests"
      ],
      "value_as": "entire_dict_obj",
      "trigger_app": "create_discovery_session",
      "wait_for_child_completion": false,
      "foreach": "${disco_sessions}",
      "app_vars": [
        {
          "name": "payload",
          "value": "${payload}"
        },
        {
          "name": "sys_id",
          "value": "${sys_id}"
        },
        {
          "name": "affected_cis",
          "value": "${affected_cis}"
        }
      ]
    },
    {
      "name": "Process Remove Device Requests",
      "file": "TriggerApplication",
      "syncpack": "base_steps_syncpack",
      "data_from": [
        "Pull and Process Service Requests"
      ],
      "value_as": "entire_dict_obj",
      "trigger_app": "process_remove_requests",
      "wait_for_child_completion": false,
      "foreach": "${device_deletes}",
      "app_vars": [
        {
          "name": "gql_search",
          "value": "${gql_search}"
        },
        {
          "name": "sys_id",
          "value": "${sys_id}"
        }
      ]
    }
  ]
}
