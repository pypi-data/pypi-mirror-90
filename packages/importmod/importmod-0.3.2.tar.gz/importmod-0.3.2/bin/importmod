import sys
from os import path as osp

if __name__ == "__main__":
    if osp.isfile(
        osp.join(
            osp.dirname(osp.dirname(osp.realpath(__file__))), ".portmod_not_installed"
        )
    ):
        sys.path.insert(0, osp.dirname(osp.dirname(osp.realpath(__file__))))
        sys.path.insert(0, osp.join(osp.dirname(osp.dirname(osp.dirname(osp.realpath(__file__)))), "portmod"))

    from importmod.main import main

    main()
