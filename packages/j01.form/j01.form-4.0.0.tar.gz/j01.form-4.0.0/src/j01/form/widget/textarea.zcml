<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:z3c="http://namespaces.zope.org/z3c"
    i18n_domain="p01">

  <class class=".textarea.TextAreaWidget">
    <require
        permission="zope.Public"
        interface="j01.form.interfaces.ITextAreaWidget"
        />
  </class>

  <adapter
      factory=".textarea.getTextAreaWidget"
      for="zope.schema.interfaces.IASCII
           j01.form.layer.IFormLayer"
      />

  <adapter
      factory=".textarea.getTextAreaWidget"
      for="zope.schema.interfaces.IText
           j01.form.layer.IFormLayer"
      />

  <z3c:widgetTemplate
      mode="display"
      widget="j01.form.interfaces.ITextAreaWidget"
      layer="j01.form.layer.IFormLayer"
      template="textarea_display.pt"
      />

  <z3c:widgetTemplate
      mode="input"
      widget="j01.form.interfaces.ITextAreaWidget"
      layer="j01.form.layer.IFormLayer"
      template="textarea_input.pt"
      />

  <z3c:widgetTemplate
      mode="hidden"
      widget="j01.form.interfaces.ITextAreaWidget"
      layer="j01.form.layer.IFormLayer"
      template="textarea_hidden.pt"
      />

</configure>
