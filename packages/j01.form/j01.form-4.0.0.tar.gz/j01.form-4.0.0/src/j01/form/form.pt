<form action="." method="post" enctype="multipart/form-data" class="form"
      metal:define-macro="form"
      tal:attributes="method view/method;
                      enctype view/enctype;
                      acceptCharset view/acceptCharset;
                      accept view/accept;
                      action view/action;
                      name view/name;
                      id view/id"
      i18n:domain="p01">
  <metal:block define-macro="subform">
  <div class="viewspace" metal:define-slot="viewspace">
    <metal:block define-slot="label">
      <h1 metal:define-macro="label"
          tal:condition="view/label|nothing"
          tal:content="view/label">
        Form Label
      </h1>
    </metal:block>
    <metal:block define-slot="info">
      <div class="required-info"
           tal:condition="view/widgets/hasRequiredFields"
           metal:define-macro="required-info">
         <tal:info content="structure view/requiredInfo" />
      </div>
    </metal:block>
    <metal:block define-slot="header">
      <div class="status"
           tal:condition="view/status"
           metal:define-macro="header">
        <div class="summary"
             i18n:translate=""
             tal:content="view/status"
             metal:define-macro="summary">
          Form status summary
        </div>
        <ul class="errors"
            tal:condition="view/widgets/errors"
            metal:define-macro="errors">
          <li tal:repeat="error view/widgets/errors">
            <tal:block condition="error/widget">
              <span tal:replace="error/widget/label" />:
            </tal:block>
            <span tal:replace="structure error/render">Error Type</span>
          </li>
        </ul>
      </div>
    </metal:block>
    <div metal:define-slot="extra-info" tal:replace="nothing"> </div>
    <div metal:define-slot="main">
      <metal:block define-macro="widget-rows">
        <tal:block repeat="widget view/widgets/values">
          <metal:block define-macro="widget-div">
            <div id="" class="widget-row"
                 tal:attributes="id string:${widget/id}-row"
                 tal:condition="python:widget.mode != 'hidden'">
              <metal:block define-macro="widget-row">
                <metal:block define-macro="widget-label">
                  <label metal:define-slot="widget-label"
                         tal:attributes="for widget/id">
                    <span tal:content="widget/label"
                          i18n:translate="">label</span>
                    <span class="required"
                          metal:define-slot="widget-required"
                          tal:condition="widget/required">*</span>
                  </label>
                </metal:block>
                <metal:block define-macro="widget-widget">
                  <div class="widget" tal:content="structure widget/render">
                    <input type="text" size="24" value="" />
                  </div>
                  <metal:block define-slot="note" tal:replace="nothing"></metal:block>
                  <div class="errors"
                       metal:define-slot="errors"
                       tal:condition="widget/error">
                    <div class="error" tal:replace="structure widget/error/render">error</div>
                  </div>
                </metal:block>
              </metal:block>
            </div>
          </metal:block>
          <input type="hidden" value=""
                 tal:condition="python:widget.mode == 'hidden'"
                 tal:replace="structure widget/render" />
        </tal:block>
      </metal:block>
    </div>
    <metal:block define-slot="above-buttons"></metal:block>
  </div>
  <metal:block define-slot="buttons">
  <div metal:define-macro="buttons">
    <div class="btns" metal:define-slot="bottom-buttons">
      <div class="btn" tal:repeat="action view/actions/values">
        <input tal:replace="structure action/render" />
      </div>
    </div>
  </div>
  </metal:block>
  <metal:block define-slot="bottom"> </metal:block>
  </metal:block>
</form>
