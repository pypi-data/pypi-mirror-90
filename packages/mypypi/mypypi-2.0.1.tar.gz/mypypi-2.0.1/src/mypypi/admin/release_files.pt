<div metal:use-macro="macro:form">
  <metal:block fill-slot="info"></metal:block>
  <div metal:fill-slot="main"
       tal:define="batch view/renderBatch">
    <ul class="errors"
        tal:condition="view/errors"
        metal:define-macro="errors">
      <li tal:repeat="error view/errors">
        <span tal:replace="structure error">Error</span>
      </li>
    </ul>
    <div class="status"
         tal:content="view/hint"></div>
    <div>
      <tal:block replace="structure view/renderTable">
        table
      </tal:block>
    </div>
    <div class="batch" tal:condition="batch">
      <tal:block replace="structure batch">
        table
      </tal:block>
    </div>
  </div>
  <div class="tableButtons" metal:fill-slot="buttons">
    <div class="tableButtonRight">
      <input type="submit"
             tal:condition="nocall:view/actions/delete | nothing"
             tal:replace="structure view/actions/delete/render"
             />
    </div>
    <div class="tableButtonLeftt">
      <input type="submit"
             tal:condition="nocall:view/actions/publish | nothing"
             tal:replace="structure view/actions/publish/render"
             />
      <input type="submit"
             tal:condition="nocall:view/actions/fetchAll | nothing"
             tal:replace="structure view/actions/fetchAll/render"
             />
    </div>
  </div>
</div>
