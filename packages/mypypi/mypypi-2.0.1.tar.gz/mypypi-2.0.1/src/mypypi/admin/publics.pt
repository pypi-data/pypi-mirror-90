<div metal:use-macro="macro:form">
  <metal:block fill-slot="info"></metal:block>
  <div metal:fill-slot="main"
       tal:define="batch view/renderBatch">
    <div>
      <tal:block replace="structure view/renderTable">
        table
      </tal:block>
    </div>
    <div class="batch" tal:condition="batch">
      <tal:block replace="structure batch">
        table
      </tal:block>
    </div>
  </div>
  <div class="tableButtons" metal:fill-slot="buttons">
    <div class="tableButtonRight">
      <input type="submit"
             tal:condition="nocall:view/actions/delete | nothing"
             tal:replace="structure view/actions/delete/render"
             />
    </div>
    <div class="tableButtonLeft">
      <input type="submit"
             tal:condition="nocall:view/actions/edit | nothing"
             tal:replace="structure view/actions/edit/render"
             />
      <input type="submit"
             tal:condition="nocall:view/actions/cancel | nothing"
             tal:replace="structure view/actions/cancel/render"
             />
    </div>
  </div>
  <div metal:fill-slot="bottom"
       tal:define="subForm nocall:view/subForm | noting"
       tal:condition="nocall:subForm">
    <tal:block replace="structure subForm/render">
              form
    </tal:block>
  </div>
</div>
