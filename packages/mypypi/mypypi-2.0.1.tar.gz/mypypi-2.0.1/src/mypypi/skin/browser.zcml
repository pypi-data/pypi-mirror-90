<configure
    xmlns:zope="http://namespaces.zope.org/zope"
    xmlns="http://namespaces.zope.org/browser"
    xmlns:z3c="http://namespaces.zope.org/z3c"
    i18n_domain="mypypi">

  <page
      name="siteURL"
      for="*"
      class=".SiteURL"
      layer="mypypi.layer.IPYPICoreLayer"
      permission="zope.Public"
      />

  <page
      name="siteTitle"
      for="*"
      class=".SiteTitle"
      layer="mypypi.layer.IPYPICoreLayer"
      permission="zope.Public"
      />

  <page
      name="isAuthenticated"
      for="*"
      class=".ISAuthenticated"
      layer="mypypi.layer.IPYPICoreLayer"
      permission="zope.Public"
      />

  <page
      name="canView"
      for="*"
      class=".CanView"
      layer="mypypi.layer.IPYPICoreLayer"
      permission="zope.Public"
      />

  <page
      name="canManagePackages"
      for="*"
      class=".CanManagePackages"
      layer="mypypi.layer.IPYPICoreLayer"
      permission="zope.Public"
      />

  <!-- favicon -->
  <page
      name="favicon.ico"
      for="*"
      class=".Favicon"
      permission="zope.Public"
      layer="zope.publisher.interfaces.http.IHTTPRequest"
      />

  <!-- index skins -->
  <resourceDirectory
      name="img"
      directory="img"
      layer="mypypi.layer.IPYPICoreLayer"
      />

  <!-- See Favicon class in rtm/skin/__init__.py -->
  <resource
      name="favicon.ico"
      file="img/favicon.ico"
      layer="zope.publisher.interfaces.http.IHTTPRequest"
      />

  <resource
      name="mypypi-0.5.0.css"
      file="mypypi-0.5.0.css"
      layer="mypypi.layer.IPYPICoreLayer"
      />

  <resource
      name="jquery-1.2.6.js"
      file="jquery-1.2.6.js"
      layer="mypypi.layer.IPYPICoreLayer"
      />

  <resource
      name="mypypi-0.5.0.js"
      file="mypypi-0.5.0.js"
      layer="mypypi.layer.IPYPICoreLayer"
      />

  <!-- main layout -->
  <z3c:layout
      for="*"
      layer="mypypi.layer.IPYPICoreLayer"
      template="template.pt"
      />

  <!-- pypi index layout -->
  <z3c:layout
      name="pypi"
      layer="mypypi.layer.IPYPICoreLayer"
      template="template_pypi.pt"
      />

  <!-- simple index layout -->
  <z3c:layout
      name="simple"
      for="*"
      layer="mypypi.layer.IPYPICoreLayer"
      template="template_simple.pt"
      />
</configure>
