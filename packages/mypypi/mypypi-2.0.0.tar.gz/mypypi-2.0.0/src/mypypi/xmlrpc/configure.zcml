<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:xmlrpc="http://namespaces.zope.org/xmlrpc"
    i18n_domain="mypypi">

  <xmlrpc:view
      for="mypypi.interfaces.IPYPISite"
      class=".pypi.PYPIAPI"
      methods="list_packages
               package_releases
               release_urls
               package_urls
               release_data
               package_data
               search"
      permission="mypypi.View"
      />

</configure>
