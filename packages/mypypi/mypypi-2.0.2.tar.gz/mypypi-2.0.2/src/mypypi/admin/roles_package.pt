<div metal:use-macro="macro:form" i18n:domain="mypypi">
  <metal:block fill-slot="info">
  <div class="infoSlot" i18n:translate="">
    This settings are valid for this packages. Use the role management option at
    site level for grant roles to groups in general.
  </div>
  </metal:block>
  <div metal:fill-slot="main"
       tal:define="batch view/renderBatch">
    <div>
      <tal:block replace="structure view/renderTable">
        table
      </tal:block>
    </div>
  </div>
  <div class="tableButtons" metal:fill-slot="buttons">
    <div class="tableButtonRight">
    <input type="submit"
           tal:condition="nocall:view/actions/cancel | nothing"
           tal:replace="structure view/actions/cancel/render"
           />
    </div>
    <div class="tableButtonLeft">
    <input type="submit"
           tal:condition="nocall:view/actions/saveRoles | nothing"
           tal:replace="structure view/actions/saveRoles/render"
           />
    </div>
  </div>
</div>
